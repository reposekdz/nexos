# Additional Environment Variables for Features 181-240
# Add these to your .env file

# Email Notifications (Feature 201)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@nexos.com

# Push Notifications (Feature 202)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=admin@nexos.com

# SMS Notifications (Feature 203)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# Data Export (Features 187-189)
EXPORT_ENCRYPTION_KEY=your_32_byte_encryption_key

# Webhooks (Feature 212)
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Monitoring (Features 231-238)
METRICS_RETENTION_DAYS=90
ERROR_LOG_RETENTION_DAYS=90

# Feature Flags (Feature 234)
FEATURE_FLAGS_CACHE_TTL=60000

# Redis (Required for caching, rate limiting, and more)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Configuration (Feature 195)
SESSION_SECRET=your_session_secret
SESSION_TTL=3600

# CORS Origins
CLIENT_URL_WEB=http://localhost:3000
CLIENT_URL_MOBILE=http://localhost:3001
CLIENT_URL_DESKTOP=http://localhost:3002

# API Base URL (for webhooks, RSS, etc.)
API_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Node Environment
NODE_ENV=development
